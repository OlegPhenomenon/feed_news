<%= form_with model: @post  do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div class="field">
    <%= form.label :content %>
    <%= form.rich_text_area :content %>
  </div>

  <%= form.select :status, options_for_select(Post.statuses.keys, selected: @post.status), {}, {class: '' } %>
  <%= form.submit form.object.new_record? ? 'Create' : 'Update' %>
<% end %>