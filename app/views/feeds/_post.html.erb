<%= render PostComponent.new(post: post, current_user: user, pin: pin, author: author) do |c| %>
  <%= c.with_avatar do %>
    <%= render Common::AvatarComponent.new(post: post) %>
  <% end %>

  <% c.with_pinned_actions do %>
    <%= render Actions::PinnedActionsComponent.new(pin: pin, author: author) %>
  <% end %>

  <%= c.with_author_actions do %>
    <%= render Actions::AuthorActionsComponent.new(post: post) %>
  <% end %>

  <% c.with_present_window do %>
    <%= render Common::PresenterComponent.new(post: post) %>
  <% end %>

  <%= c.with_read_more do %>
    <%= render Common::ReadMoreComponent.new(post: post) %>
  <% end %>
<% end %>
